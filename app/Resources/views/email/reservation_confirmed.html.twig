{% extends ':email:layout.html.twig' %}

{% block title %}
    <h1 style="text-align: center; color: #FFF; font-weight: 400;font-family: Arial Black, Arial, sans-serif">MERCI POUR VOTRE RÉSERVATION FOOD & YOU !</h1>
{% endblock %}

{% block subtitle %}
{% endblock %}

{% block content %}
    <table width="100%" bgcolor="#ffffff" cellpadding="0" cellspacing="0" border="0">
        <tbody>
        <tr>
            <td>
                <div class="innerbg">
                </div>
                <table width="650" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                    <tbody>
                    <tr>
                        <td width="100%">
                            <table width="650" align="center" cellspacing="0" cellpadding="0" border="0" class="devicewidth">
                                <tbody>
                                <tr>
                                    <td align="left" style="padding: 30px 0; color: #000">
                                        <div style="font-size: 16px; font-family: Helvetica, Arial, sans-serif; line-height: 1.5;">
                                            <p style="padding-top: 20px">
                                                Votre réservation pour <strong> {{ reservation.places }} personne(s) </strong> a été correctement enregistrée.
                                            </p>
                                            <p style="padding-top: 20px; text-align: left;">
                                                <span style="color: #008F8A;">{{ reservation.event.startDate|date('d') }} {{ reservation.event.startDate|date('M')|trans({}, 'messages') }} {{ reservation.event.startDate|date('Y') }}</span><br>
                                                <span style="color: #008F8A;">{{ reservation.event.restaurant.name }}</span><br>
                                                {{ reservation.event.restaurant.street }} {{ reservation.event.restaurant.postalCode }} {{ reservation.event.restaurant.city.name }}
                                            </p>
                                            <p style="padding-top: 20px;">
                                                Partagez une soirée insolite avec vos amis ! Invitez-les à votre table en partageant le code :
                                            </p>
                                            <p style="padding-top: 20px; text-align: center; color: #008F8A;font-weight: 300; font-size: 20px;">
                                                {{ reservation.tableOwner.tableCode }}
                                            </p>
                                            <p style="padding-top: 20px;">
                                                Vous pouvez revoir votre réservation à tout moment en vous rendant sur votre page profil, section <a href= "{{ url('member_profile', { "slug": reservation.member.slug }) }}">"J'y vais bientôt"</a>.
                                            </p>
                                            <div style="padding-top: 20px">
                                                <span style="font-weight: bold">Votre facture</span>
                                                <table border="1" cellspacing="0" cellpadding="15" style="border: 1px solid #000">
                                                    <tbody>
                                                    <tr>
                                                        <td style="text-align: right; padding-right: 20px">Numéro de facture</td>
                                                        <td>FY{{ reservation.event.startDate|date('Y') }}{{ reservation.event.startDate|date('m') }}{{ reservation.event.startDate|date('d')}}{{ reservation.transaction.id }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td style="text-align: right; padding-right: 20px">Produit</td>
                                                        <td>Réservation pour {{ reservation.places }} personne(s)</td>
                                                    </tr>
                                                    <tr style="background-color: #e8e8e8">
                                                        <td style="text-align: right; padding-right: 20px">Total HT</td>
                                                        <td>{{ (reservation.transaction.amount / 100 * 0.88)|number_format(2, ',', '') }} &euro;</td>
                                                    </tr>
                                                    <tr style="background-color: #e8e8e8">
                                                        <td style="text-align: right; padding-right: 20px">TVA 12%</td>
                                                        <td>{{ (reservation.transaction.amount / 100 * 0.12)|number_format(2, ',', '') }} &euro;</td>
                                                    </tr>
                                                    <tr style="background-color: #e8e8e8">
                                                        <td style="text-align: right; padding-right: 20px">Total TTC</td>
                                                        <td>{{ reservation.transaction.formattedAmount }} &euro;</td>
                                                    </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <p style="padding-top: 20px; font-style: italic">
                                                informations légales
                                            </p>
                                        </div>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
