{% extends ':email:layout.html.twig' %}

{% block title %}
    <h1 style="text-align: center; color: #FFF; font-weight: 400;font-family: Arial Black, Arial, sans-serif">RÉSERVATION FOOD & YOU ANNULÉE</h1>
{% endblock %}

{% block subtitle %}
{% endblock %}

{% block content %}
    <table width="100%" bgcolor="#ffffff" cellpadding="0" cellspacing="0" border="0">
        <tbody>
        <tr>
            <td>
                <div class="innerbg">
                </div>
                <table width="650" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                    <tbody>
                    <tr>
                        <td width="100%">
                            <table width="650" align="center" cellspacing="0" cellpadding="0" border="0" class="devicewidth">
                                <tbody>
                                <tr>
                                    <td align="left" style="padding: 30px 0; color: #000">
                                        <div style="font-size: 16px; font-family: Helvetica, Arial, sans-serif; line-height: 1.5;">
                                            <p style="padding-top: 20px">
                                                Veuillez bien prendre en compte l’annulation de la réservation :
                                            </p>
                                            <p style="padding-top: 20px">
                                                {{ reservation.member.fullName }}<br>
                                                table N° {{ reservation.tableOwner.tableCode }}<br>
                                                pour la soirée du {{ reservation.event.startDate|date('d') }} {{ reservation.event.startDate|date('M')|trans({}, 'messages') }} {{ reservation.event.startDate|date('Y') }}

                                            </p>
                                            <p style="padding-top: 20px">
                                                Rassurez vous, ces annulations ne seront pas déduites du montant reversé.
                                            </p>

                                            <p style="padding-top: 20px">
                                                Merci et à bientôt,<br>
                                                L’équipe Food&You
                                            </p>
                                        </div>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
